<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yangfan.dao.UserDao">
	<select id="getUserByName" parameterType="String" resultType="pojo.User">
		select * from user where name=#{username}
	</select>
	
	<update id="updateUser" parameterType="pojo.User">
		UPDATE user SET id = #{id}, name=#{username},password=#{password},role=#{role}
		WHERE name = #{username}
	</update>
	
	<delete id="deleteUser" parameterType="String">
		DELETE FROM usert WHERE name = #{username}
	</delete>
	
	<!-- 直接写出user的属性即可，不需要user.username -->
	<insert id="addUser" parameterType="pojo.User">
		insert into user (name,password,role) values (#{username},#{password},#{role})
	</insert>
</mapper>
